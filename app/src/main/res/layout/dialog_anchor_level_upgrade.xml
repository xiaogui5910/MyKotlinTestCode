<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_anchor_level_bg"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dialog_anchor_level_upgrade_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="主播等级提升"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_dialog_anchor_level_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.5dp"
        android:src="@drawable/icon_anchor_level_bg_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_anchor_level_upgrade_tips" />

    <ImageView
        android:id="@+id/iv_dialog_anchor_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3.5dp"
        android:src="@drawable/icon_anchor_level_text_25"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dialog_anchor_level_bg"
        app:layout_constraintEnd_toEndOf="@+id/iv_dialog_anchor_level_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_dialog_anchor_level_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>