<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activity.community.CommunityDetailHeaderActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="44dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_title_back"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:paddingStart="12dp"
        android:paddingTop="11dp"
        android:paddingEnd="0dp"
        android:paddingBottom="11dp"
        android:src="@drawable/king_guess_icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_back"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="6dp"
        android:gravity="center_vertical"
        android:text="社区"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/iv_title_back"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_title_more"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:paddingStart="0dp"
        android:paddingTop="11dp"
        android:paddingEnd="12dp"
        android:paddingBottom="11dp"
        app:srcCompat="@drawable/icon_more_land"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_reply"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_community_title_text_bg"
        android:paddingStart="9dp"
        android:paddingTop="4dp"
        android:paddingEnd="9dp"
        android:paddingBottom="4dp"
        android:text="999回帖"
        android:textColor="#333333"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_title_more"
        app:layout_constraintEnd_toStartOf="@+id/iv_title_more"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_replies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_bottom_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bottom_reply"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape_community_bottom_text_bg"
                android:gravity="center_vertical"
                android:paddingStart="18dp"
                android:paddingEnd="0dp"
                android:text="回复楼主"
                android:textColor="@color/color_black_999999" />

            <ImageView
                android:id="@+id/iv_bottom_like"
                android:layout_width="25.5dp"
                android:layout_height="25.5dp"
                android:src="@drawable/icon_like" />

            <TextView
                android:id="@+id/tv_bottom_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textSize="12sp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/color_black_666666"
                android:gravity="center_vertical"
                android:text="9999" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>