<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="30dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_community_detail_header_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:textColor="@color/color_black_999999"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="24dp" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:background="@color/color_black_999999"
        app:layout_constraintBottom_toBottomOf="@+id/tv_community_detail_header_edit"
        app:layout_constraintStart_toEndOf="@+id/tv_community_detail_header_edit"
        app:layout_constraintTop_toTopOf="@+id/tv_community_detail_header_edit" />

    <TextView
        android:id="@+id/tv_community_detail_header_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="删除"
        android:textColor="@color/color_black_999999"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/view_divider"
        app:layout_constraintTop_toTopOf="@+id/tv_community_detail_header_edit" />

    <TextView
        android:id="@+id/tv_community_detail_header_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="举报"
        android:textColor="@color/color_black_999999"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_community_detail_header_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>
