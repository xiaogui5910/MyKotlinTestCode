<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜你获得"
        android:textColor="#333333"
        android:textSize="17sp"
        android:layout_marginTop="21dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_egg"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/icon_egg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_name" />

    <TextView
        android:id="@+id/tv_egg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="鹅蛋x200"
        android:textColor="#999999"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_egg"
        app:layout_constraintStart_toStartOf="@+id/iv_egg"
        app:layout_constraintTop_toBottomOf="@+id/iv_egg" />

    <TextView
        android:id="@+id/tv_egg_agree"
        android:layout_width="match_parent"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:layout_height="36dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/shape_egg_bg_yellow_24"
        android:gravity="center"
        android:text="好的"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="21dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_egg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>